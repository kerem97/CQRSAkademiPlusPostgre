@model List<GetProductQueryResult>

@{
    Layout = null;
    int sayac = 0;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<div class="container">
    <br /><br />
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Ürün Adı</th>
            <th>Marka</th>
            <th>Kategori</th>
            <th>Stok</th>
            <th>Stok Türü</th>
            <th>Fiyat</th>
            <th>Sil</th>
            <th>Güncelle</th>
            <th>Detaylar</th>
        </tr>
        @foreach (var x in Model)
        {
            sayac++;
            <tr>
                <td>@sayac</td>
                <td>@x.ProductName</td>
                <td>@x.ProductBrand</td>
                <td>@x.ProductCategory</td>
                <td>@x.ProductStock</td>
                <td>@x.ProductStockType</td>
                <td>@x.ProductPrice</td>
                <td><a href="/Product/DeleteProduct/@x.ProductID" class="btn btn-outline-danger">Sil</a></td>
                <td><a href="/Product/UpdateProduct/@x.ProductID" class="btn btn-outline-warning">Güncelle</a></td>
                <td><a href="/Product/DetailProduct/@x.ProductID" class="btn btn-outline-dark">Detaylar</a></td>
            </tr>
        }
    </table>
    <a href="/Product/AddProduct" class="btn btn-outline-info">Yeni Ürün Ekle</a>
</div>
